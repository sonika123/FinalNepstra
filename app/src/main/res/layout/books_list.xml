<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="1dp"
    android:elevation="3dp"

    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/books_product_image"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="4dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:id="@+id/books_product_name"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="ABCDEFGH"
                android:textColor="@color/colorBlack"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp" />
            />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:text="$3"
                android:id="@+id/books_product_price"
                android:textColor="@color/colorAppRed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:layout_marginTop="0dp" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock Available"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="left"
            android:layout_marginLeft="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp">

            <Button
                android:id="@+id/books_btn_add_to_cart"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@color/colorLightGreen"
                android:gravity="center|center_vertical"
                android:text="@string/add_to_cart"
                android:textAllCaps="false"
                android:textSize="10sp"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/books_btn_view_more"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="10sp"
                android:gravity="center|center_vertical"
                android:text="@string/view_more"
                android:textAllCaps="false"
                android:background="@color/colorAppWhite"
                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>